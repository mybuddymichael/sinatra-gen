#!/usr/bin/env bash

set -e

help() {
  cat << HELP

  USAGE: sinatra-gen [options] PROJECT_NAME

  OPTIONS:
    -h, --help      Display this help.
    -d, --dry-run   Don't actually create any files.
    -t, --template  Specify a template engine to use. Default is
                    Mustache; optionally use ERB, Haml, or Slim.
    -s, --style     Specify a stylesheet preprocessor. Default is
                    Scss; optionally use Sass or LESS.
HELP
}

current_directory="$(pwd)"

if [[ -z "$1" ]]; then
  echo "No project name was provided."
  exit 1
else
  project_name="$1"
fi

project_directory="${current_directory}/${project_name}"
if [[ -e "$project_directory" ]]; then
  echo ""
fi
